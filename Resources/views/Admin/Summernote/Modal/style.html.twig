<div class="modal" data-modal="style">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close">
                    <i class="fa fa-close"></i>
                </button>
                <h4 class="modal-title">Application d'un style</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-sm-4">
                        <label>Style</label>
                        <select class="form-control" data-select="class" data-placeholder="Aucun">
                            <option selected="selected"></option>
                            <option value="h1">Titre 1</option>
                            <option value="h2">Titre 2</option>
                            <option value="h3">Titre 3</option>
                            <option value="h4">Titre 4</option>
                        </select>
                    </div>
                    {% if colors|length %}
                        <div class="form-group col-sm-8">
                            <label>Couleur</label>
                            <div>
                                <select data-select="color">
                                    <option selected="selected" value="">Aucune</option>
                                    {% for color in colors %}
                                        <option value="{{ color }}">{{ color }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <label>Pr√©visualisation</label>
                <div data-preview="text"></div>
                <div class="modal-footer">
                    <button class="btn btn-danger">
                        <i class="fa fa-ban"></i>
                        <span>Annuler</span>
                    </button>
                    <button class="btn btn-success">
                        <i class="fa fa-check"></i>
                        <span>Appliquer</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
